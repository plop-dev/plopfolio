</Layout>

<script>
	import anime from 'animejs/lib/anime.es.js';

	document.addEventListener('astro:page-load', () => {
		let blinking = anime.timeline({ loop: true, autoplay: true });

		anime({
			targets: '.line path',
			strokeDashoffset: [anime.setDashoffset, 0],
			easing: 'easeInQuad',
			duration: 1000,
			autoplay: true,
		}).finished.then(() => {
			blinking.add({
				duration: 600,
			});

			blinking.add({
				targets: '.line > *',
				opacity: 0.35,
				easing: 'linear',
				duration: 65,
			});
			blinking.add({
				targets: '.line > *',
				opacity: 1,
				easing: 'linear',
				duration: 65,
			});
			blinking.add({
				targets: '.line > *',
				opacity: 0.35,
				easing: 'linear',
				duration: 65,
			});
			blinking.add({
				targets: '.line > *',
				opacity: 1,
				easing: 'linear',
				duration: 65,
			});

			blinking.add({
				duration: 1000,
			});
		});
	});
</script>

