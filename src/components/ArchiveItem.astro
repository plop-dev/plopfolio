---
interface Props {
	title: string;
	content: string;
	date: string;
}

const { title, content, date } = Astro.props;
---

<div class='archive-item border border-secondary/150'>
	<h2>{title}</h2>
	<p>{content}</p>
	<span>{date}</span>
</div>

<style lang='scss'>
	.archive-item {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		width: 100%;
		height: 100%;
		background-color: var(--secondary);
		padding: 1rem;
		margin: 1rem;
		border-radius: 1rem;
		box-shadow: 0 0 1rem 0 rgba(0, 0, 0, 0.2);
		transition: var(--transition);

		&:hover {
			transform: scale(1.025);
			box-shadow: 0 0 2rem 0 rgba(0, 0, 0, 0.5);
		}
	}
</style>
